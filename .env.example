# Influence System Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO
API_VERSION=v1
API_TITLE=Ask Polestar Influence System
API_DESCRIPTION=Influence tracking and analytics API

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ask_polestar_influence
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ask_polestar_influence
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_SEND_SENT_EVENT=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Authentication & Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=ask-polestar-influence
JWT_AUDIENCE=ask-polestar-users
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

YOUTUBE_API_KEY=your-youtube-api-key
TIKTOK_API_KEY=your-tiktok-api-key
SNAPCHAT_API_KEY=your-snapchat-api-key

# Analytics and Tracking
GOOGLE_ANALYTICS_API_KEY=your-google-analytics-api-key
GOOGLE_SEARCH_CONSOLE_API_KEY=your-google-search-console-api-key
FACEBOOK_ANALYTICS_API_KEY=your-facebook-analytics-api-key

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@askpolestar.com
FROM_NAME=Ask Polestar
EMAIL_TEMPLATE_DIR=templates/email

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx,xls,xlsx
MAX_FILE_SIZE_MB=16

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8502
CSRF_SECRET_KEY=your-csrf-secret-key
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Monitoring and Logging
PROMETHEUS_METRICS_PATH=/metrics
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn-url
LOG_FORMAT=json
LOG_FILE_PATH=logs/influence_system.log
LOG_ROTATION=midnight
LOG_RETENTION_DAYS=30

# Cache Settings
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=influence_

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=influence_session_
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_INFLUENCE_TRACKING=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_A_B_TESTING=false

# Business Logic Settings
INFLUENCE_SCORE_ALGORITHM=weighted_average
MIN_FOLLOWERS_FOR_INFLUENCE=1000
ENGAGEMENT_RATE_THRESHOLD=0.02
CONTENT_QUALITY_THRESHOLD=0.7
SPAM_DETECTION_ENABLED=true
AUTO_MODERATION_ENABLED=true

# External Services
WEBHOOK_SECRET=your-webhook-secret
API_RATE_LIMIT=1000
API_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=1

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_ERROR_DETAILS=true
DEBUG_SQL_QUERIES=false
PROFILE_PERFORMANCE=false